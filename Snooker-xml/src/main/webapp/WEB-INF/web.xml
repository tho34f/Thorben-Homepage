<web-app xmlns="http://JAVA.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
	http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">

	<display-name>Gradle + Spring MVC Hello World + XML</display-name>
	<description>Spring MVC web application</description>

	<!-- For web context -->
	<servlet>
		<servlet-name>hello-dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring-mvc-config.xml</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
		<servlet>
		<servlet-name>newsController</servlet-name>
		<servlet-class>com.thorben.helloworld.web.NewsWizardController</servlet-class>
		<load-on-startup>2</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>terminController</servlet-name>
		<servlet-class>com.thorben.helloworld.web.TerminWizardController</servlet-class>
		<load-on-startup>3</load-on-startup>
	</servlet>
	<servlet>
		<servlet-name>userController</servlet-name>
		<servlet-class>com.thorben.helloworld.web.UserWizardController</servlet-class>
		<load-on-startup>4</load-on-startup>
	</servlet>

	<servlet-mapping>
		<servlet-name>hello-dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>newsController</servlet-name>
		<url-pattern>/backend/newswizard</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>terminController</servlet-name>
		<url-pattern>/backend/terminewizard</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>userController</servlet-name>
		<url-pattern>/backend/userwizard</url-pattern>
	</servlet-mapping>

	<!-- For root context -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>/WEB-INF/spring-core-config.xml</param-value>
	</context-param>
	
	<jsp-config>
		 <taglib>
	        <taglib-uri>/thorben</taglib-uri>
	        <taglib-location>/WEB-INF/tags/taglib/eigeneTags.tld</taglib-location>
	    </taglib>
    </jsp-config>
	
	<resource-ref>
	    <description>postgreSQL Datasource example</description>
	    <res-ref-name>jdbc/thorbenDB</res-ref-name>
	    <res-type>javax.sql.DataSource</res-type>
	    <res-auth>Container</res-auth>
	    <res-sharing-scope>Shareable</res-sharing-scope>
	</resource-ref>

</web-app>